<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ritoinfo.framework.evo.sp.auth.dao.UserDao">

	<resultMap id="UserResultMap" type="User">
		<id column="id" property="id"/>
		<result column="username" property="username"/>
		<result column="password" property="password"/>
	</resultMap>

	<sql id="columns">
		t.id, t.username, t.password
	</sql>

	<sql id="condition">
		<where>
			<if test="id != null">
				AND t.id = #{id}
			</if>
			<if test="username != null">
				AND t.username = #{username}
			</if>
			<if test="password != null">
				AND t.password = #{password}
			</if>
		</where>
	</sql>

	<sql id="select">
		SELECT
		<include refid="columns"/>
		  FROM auth_user t
		<include refid="condition"/>
	</sql>

	<select id="get" resultMap="UserResultMap">
		<include refid="select"/>
	</select>

	<select id="find" resultMap="UserResultMap">
		<include refid="select"/>
		<if test="pageSort != null">
			ORDER BY ${pageSort} <if test="pageOrder != null">${pageOrder}</if>
		</if>
	</select>

	<select id="count" resultType="int">
		SELECT count(1) count
		  FROM auth_user t
		<include refid="condition"/>
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO auth_user (
			username,
			password
		) VALUES (
			#{username},
			#{password}
		)
	</insert>

	<update id="update">
		UPDATE auth_user SET
			username = #{username},
			password = #{password}
		WHERE
			id = #{id}
	</update>

	<delete id="delete">
		DELETE FROM auth_user WHERE id = #{id}
	</delete>

</mapper>
