<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ritoinfo.framework.evo.sample.dao.CountryDao">

	<resultMap id="CountryResultMap" type="Country">
		<id column="id" property="id"/>
		<result column="code" property="code"/>
		<result column="name" property="name"/>
		<result column="create_by" property="createBy"/>
		<result column="create_time" property="createTime"/>
		<result column="update_by" property="updateBy"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>

	<sql id="columns">
		t.id, t.code, t.name,
		t.create_by, t.create_time, t.update_by, t.update_time
	</sql>

	<sql id="condition">
		<where>
			<if test="id != null and id != ''">
				AND t.id = #{id}
			</if>
			<if test="code != null and code != ''">
				AND t.code = #{code}
			</if>
			<if test="name != null and name != ''">
				AND t.name = #{name}
			</if>
		</where>
	</sql>

	<sql id="conditionLike">
		<where>
			<if test="code != null and code != ''">
				AND t.code like '%${code}%'
			</if>
			<if test="name != null and name != ''">
				AND t.name like '%${name}%'
			</if>
		</where>
	</sql>

	<sql id="select">
		SELECT <include refid="columns"/> FROM country t
	</sql>

	<select id="get" resultMap="CountryResultMap">
		<include refid="select"/>
		WHERE t.id = #{value}
	</select>

	<select id="find" resultMap="CountryResultMap">
		<include refid="select"/>
		<include refid="condition"/>
		<if test="pageSort != null">
			ORDER BY ${pageSort} <if test="pageOrder != null">${pageOrder}</if>
		</if>
	</select>

	<select id="findLike" resultMap="CountryResultMap">
		<include refid="select"/>
		<include refid="conditionLike"/>
		<if test="pageSort != null">
			ORDER BY ${pageSort} <if test="pageOrder != null">${pageOrder}</if>
		</if>
	</select>

	<select id="count" resultType="int">
		SELECT count(1) count FROM country t
		<include refid="condition"/>
	</select>

	<select id="countLike" resultType="int">
		SELECT count(1) count FROM country t
		<include refid="conditionLike"/>
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO country (
			code, name, create_by, create_time, update_by, update_time
		) VALUES (
			#{code}, #{name}, #{createBy}, #{createTime}, #{updateBy}, #{updateTime}
		)
	</insert>

	<update id="update">
		UPDATE country SET
			code = #{code},
			name = #{name},
			update_by = #{updateBy},
			update_time = #{updateTime}
		WHERE
			id = #{id}
	</update>

	<delete id="delete">
		DELETE FROM country WHERE id = #{value}
	</delete>

</mapper>
